{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Chain Profile",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "pretty_name": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": ["DeFi", "Social", "NFT", "Gaming", "Portfolio", "AI", "Other"]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 10
      },
      "maxItems": 3
    },
    "description": {
      "type": "string",
      "description": "A longer description for the landing page"
    },
    "summary": {
      "type": "string",
      "description": "A short description for the onboarding page (less than or equal to 50 characters)",
      "maxLength": 50
    },
    "color": {
      "$ref": "#/$defs/color",
      "description": "Modify saturation and luminance for the ecosystem or the vip"
    },
    "status": {
      "type": "string",
      "enum": ["live", "upcoming"]
    },
    "vip": {
      "type": "object",
      "properties": {
        "actions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "social": {
      "type": "object",
      "properties": {
        "website": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://."
        },
        "twitter": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://x.com/."
        }
      }
    },
    "l2": {
      "type": "boolean"
    }
  },
  "$defs": {
    "color": {
      "description": "RGB color",
      "format": "rgbcolor",
      "pattern": "^#([a-fA-F0-9]{6})$",
      "type": "string"
    }
  }
}
